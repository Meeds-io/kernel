<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsdhttp://www.exoplaform.org/xml/ns/kernel_1_1.xsd"
	xmlns="http://www.exoplaform.org/xml/ns/kernel_1_1.xsd">

	<component>
		<!-- The full qualified name of the PortalContainerConfig -->
		<type>org.exoplatform.container.definition.PortalContainerConfig</type>
		<init-params>
			<!-- It cans be used to avoid duplicating configuration -->
			<object-param>
				<name>default.portal.definition</name>
				<object type="org.exoplatform.container.definition.PortalContainerDefinition">
					<!-- The path to the external properties file -->
					<field name="externalSettingsPath">
						<string>classpath:/org/exoplatform/container/definition/sample-gtn-configuration.properties</string>
					</field>                    
				</object>
			</object-param>
		</init-params>
	</component>
</configuration>
